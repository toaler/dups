{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "turbo-tasker-app",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "path": {
        "all": true,
        "appDir": true,
        "audioDir": false,
        "cacheDir": false,
        "configDir": false,
        "dataDir": false,
        "desktopDir": false,
        "documentDir": false,
        "downloadDir": false,
        "executableDir": false,
        "fontDir": false,
        "homeDir": true,
        "localDataDir": false, 
        "pictureDir": false,
        "publicDir": false,
        "runtimeDir": false,
        "templateDir": false,
        "videoDir": false,
        "resourceDir": false,
        "resolvePath": false
      },
      "shell": {
        "all": false,
        "open": true
      }
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "resizable": true,
        "title": "Turbo Tasker",
        "width": 1280,
        "height": 720,
        "minWidth": 400,
        "minHeight": 300,
        "maxWidth": 3200,
        "maxHeight": 2400
      },
      {
        "width": 400,
        "height": 400,
        "decorations": false,
        "url": "splashscreen.html",
        "label": "splashscreen"
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "org.bpt",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
